{
  "swagger": "2.0",
  "info": {
    "title": "Product API",
    "description": "API for managing products",
    "version": "1.0"
  },
  "basePath": "/api",
  "schemes": ["http"],
  "paths": {
    "/product": {
      "get": {
        "summary": "Get all products",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "query",
            "name": "page",
            "description": "The page number to retrieve (default: 1)",
            "type": "integer"
          },
          {
            "in": "query",
            "name": "queryType",
            "description": "The type of query to perform (e.g. \"scrumMaster\", \"developer\")",
            "type": "string",
            "enum": ["scrumMaster", "developer"]
          },
          {
            "in": "query",
            "name": "query",
            "description": "The query to search products by",
            "type": "string"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {
                "pageData": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "productNumber": {
                        "type": "integer"
                      },
                      "productName": {
                        "type": "string"
                      },
                      "productOwner": {
                        "type": "string"
                      },
                      "scrumMaster": {
                        "type": "string"
                      },
                      "developers": {
                        "type": "array",
                        "items": {
                          "type": "string"
                        }
                      },
                      "methodology": {
                        "type": "string",
                        "enum": ["Agile", "Waterfall"]
                      }
                    }
                  }
                },
                "currentPage": {
                  "type": "integer"
                },
                "totalPages": {
                  "type": "integer"
                },
                "totalProduct": {
                  "type": "integer"
                }
              }
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "post": {
        "summary": "Create a new product",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Product data",
            "schema": {
              "type": "object",
              "properties": {
                "productNumber": {
                  "type": "integer"
                },
                "productName": {
                  "type": "string"
                },
                "productOwner": {
                  "type": "string"
                },
                "scrumMaster": {
                  "type": "string"
                },
                "developers": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "methodology": {
                  "type": "string",
                  "enum": ["Agile", "Waterfall"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    },
    "/product/{id}": {
      "get": {
        "summary": "Get a specific product by id",
        "produces": ["application/json"],
        "parameters": [
          {
            "in": "path",
            "name": "id",
            "description": "The ID of the product to retrieve",
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "OK",
            "schema": {
              "type": "object",
              "properties": {}
            }
          },
          "500": {
            "description": "Internal Server Error",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "put": {
        "summary": "Update an existing product by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "type": "integer"
          },
          {
            "name": "body",
            "in": "body",
            "description": "Product data",
            "schema": {
              "type": "object",
              "properties": {
                "productName": {
                  "type": "string"
                },
                "productOwner": {
                  "type": "string"
                },
                "scrumMaster": {
                  "type": "string"
                },
                "startDate": {
                  "type": "string"
                },
                "developers": {
                  "type": "array",
                  "items": {
                    "type": "string"
                  }
                },
                "methodology": {
                  "type": "string",
                  "enum": ["Agile", "Waterfall"]
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          }
        }
      },
      "delete": {
        "summary": "Delete a product by id",
        "parameters": [
          {
            "name": "id",
            "in": "path",
            "description": "Product ID",
            "required": true,
            "type": "integer"
          }
        ],
        "responses": {
          "200": {
            "description": "Success",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          },
          "500": {
            "description": "Error",
            "schema": {
              "type": "object",
              "properties": {
                "msg": {
                  "type": "string"
                }
              }
            }
          }
        }
      }
    }
  }
}
